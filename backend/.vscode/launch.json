{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch cmd/api/main.go (local)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/api/main.go",
      "envFile": "${workspaceFolder}/.env.development",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to Docker Go Debugger",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true,
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/app"
        }
      ]
    }
  ]
}
